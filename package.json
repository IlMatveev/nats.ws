{
  "name": "ws-nats",
  "version": "1.0.0",
  "description": "WebSocket NATS client",
  "main": "index.js",
  "scripts": {
    "build": "tsc && npm run package",
    "clean": "rm -rf lib",
    "test": "tsc && nyc ava --verbose -T 15000",
    "coveralls": "nyc report --reporter=lcovonly && cat ./coverage/lcov.info | coveralls",
    "cover": "nyc report --reporter=html && open coverage/index.html",
    "debugtest": "tsc && node $NODE_DEBUG_OPTION node_modules/.bin/ava --verbose -T 6500000 -m",
    "package": "webpack-cli"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com//aricart/ws-nats"
  },
  "keywords": [
    "NATS",
    "websockets"
  ],
  "author": "Alberto Ricart",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/node": "^12.12.15",
    "@types/ws": "^6.0.4",
    "ajv": "^6.10.2",
    "ava": "^1.4.1",
    "awesome-typescript-loader": "^5.2.1",
    "browser-env": "^3.3.0",
    "canvas": "^2.6.0",
    "coveralls": "^3.0.1",
    "fast-text-encoding": "^1.0.0",
    "jsdom": "^15.2.1",
    "nyc": "^14.1.1",
    "source-map-loader": "^0.2.3",
    "ts-loader": "^4.3.1",
    "typescript": "^3.5.1",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.10",
    "ws": "latest"
  },
  "ava": {
    "require": [
      "./lib/test/helpers/setup-browser-env.js"
    ],
    "files": [
      "./lib/test/**/*.js",
      "!./lib/test/helpers/**/*.js"
    ],
    "sources": [
      "**/*.js"
    ]
  },
  "dependencies": {
    "js-nuid": "^1.0.6",
    "npm": "^6.13.2"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".js"
    ],
    "include": [
      "src/**/*.ts",
      "lib/src/**/*.js"
    ],
    "exclude": [
      "lib/test/**",
      "examples/**"
    ],
    "sourceMap": true,
    "all": true
  }
}
